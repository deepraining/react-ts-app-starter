{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "target": "es6",
    "lib": ["dom", "es7"],
    "module": "esnext",
    "jsx": "react"
  },
  "exclude": ["node_modules", "bower_components", "build", "coverage"]
}
